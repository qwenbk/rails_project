= form_for @patient do |f|
  = error_messages_for @patient
  .row
    .col-md-6
      .form-group
        = f.label :second_name
        = f.text_field :second_name, class: 'form-control'
        = f.error_messages_for(:second_name)
    .col-md-6
      .form-group
        = f.label :first_name
        = f.text_field :first_name, class: 'form-control'
        = f.error_messages_for(:first_name)
  .row
    .col-md-6
      .form-group
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :number
        = f.text_field :number, class: 'form-control'
        = f.error_messages_for(:number)
  .row
    .col-md-6
      .form-group
        = f.label :number_polis
        = f.text_field :number_polis, class: 'form-control'
        = f.error_messages_for(:number_polis)
    .col-md-6
      .form-group
        = f.label :is_platnik
        = f.check_box :is_platnik, class: 'form-control'
        = f.error_messages_for(:is_platnik)
  .row
    .col-md-6
      .form-group
        = f.label :data_created
        .input-group.date.datepickert
          = f.text_field(:data_created, value: lnilT(f.object.data_created),
          class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:data_created)
    .col-md-6
      .form-group
        = f.label :index
        = f.text_field :index, class: 'form-control'
        = f.error_messages_for(:index)
  .row
    .col-md-6
      .form-group
        = f.label :town
        = f.text_field :town, class: 'form-control'
        = f.error_messages_for(:town)
    .col-md-6
      .form-group
        = f.label :street
        = f.text_field :street, class: 'form-control'
        = f.error_messages_for(:street)
  .row
    .col-md-6
      .form-group
        = f.label :house
        = f.text_field :house, class: 'form-control'
        = f.error_messages_for(:house)
    .col-md-6
      .form-group
        = f.label :corpus
        = f.text_field :corpus, class: 'form-control'
        = f.error_messages_for(:corpus)
  .row
    .col-md-6
      .form-group
        = f.label :flat
        = f.text_field :flat, class: 'form-control'
        = f.error_messages_for(:flat)
    .col-md-6
      .form-group
        = f.label :telefone
        = f.text_field :telefone, class: 'form-control'
        = f.error_messages_for(:telefone)
  .row
    .col-md-6
      .form-group
        = f.label :issued_by
        = f.text_field :issued_by, class: 'form-control'
        = f.error_messages_for(:issued_by)
    .col-md-6
      .form-group
        = f.label :seria
        = f.text_field :seria, class: 'form-control'
        = f.error_messages_for(:seria)
  .row
    .col-md-6
      .form-group
        = f.label :nomer
        = f.text_field :nomer, class: 'form-control'
        = f.error_messages_for(:nomer)
    .col-md-6
      .form-group
        = f.label :date_of_issue
        .input-group.date.datepicker
          = f.text_field(:date_of_issue, value: lnil(f.object.date_of_issue),
          class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:date_of_issue)
  .row
    .col-md-12
      .form-group
        = f.label :allergy
        = f.text_area :allergy, class: 'form-control'
        = f.error_messages_for(:allergy)
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
