=breadcrumb_tag do
  %li.active
    = @role.name
  %li
    = link_to 'Роли', roles_path
  %li
    Администрирование

%h1= @role.name


.table-responsive.w50
  %table.table.table-hover.table-striped.table-condensed.table-bordered
    %tr.center
      %th= Role.human_attribute_name(:name)
      %td= @role.name
    %tr.center
      %th= Role.human_attribute_name(:info)
      %td= @role.info
    %tr.center
      %th= Role.human_attribute_name(:full_info)
      %td= @role.full_info

= link_to edit_role_path(@role), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')
= link_to @role, :method => :delete,
:data => { :confirm => t('buttons.confirm.role') },
  class: 'btn btn-danger' do
  = fa_icon :times
  = t('buttons.destroy')
