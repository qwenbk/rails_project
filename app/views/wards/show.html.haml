=breadcrumb_tag do
  %li.active
    = t('headers.wards.show')
  %li
    = link_to 'Палаты', wards_path
  %li
    Больница

.page-header
  %h1= t('headers.wards.show')

.table-responsive.w50
  %table.table.table-hover.table-striped.table-condensed.table-bordered
    %tr.center
      %th= Ward.human_attribute_name(:floor)
      %td= @ward.floor
    %tr.center
      %th= Ward.human_attribute_name(:number)
      %td= @ward.number
    %tr.center
      %th= Ward.human_attribute_name(:departmen)
      %td= @ward.departmen
    %tr.center
      %th= Ward.human_attribute_name(:capacity)
      %td= @ward.capacity
-if @current_role_user.present?
  = link_to edit_ward_path(@ward), class: 'btn btn-info' do
    = fa_icon :edit
    = t('buttons.edit')
  = link_to @ward, :method => :delete, :data => { :confirm => t('buttons.confirm.ward') }, class: 'btn btn-danger' do
    = fa_icon :times
    = t('buttons.destroy')
