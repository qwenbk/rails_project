=breadcrumb_tag do
  %li.active
    = t('headers.hospital_stay_lists.show')
  %li
    = link_to 'Полный список', hospital_stay_lists_path
  %li
    Больница

.page-header
  %h1= t('headers.hospital_stay_lists.show')

.table-responsive.w50
  %table.table.table-hover.table-striped.table-condensed.table-bordered
    %tr.center
      %th= HospitalStayList.human_attribute_name(:patient_id)
      %td= @hospital_stay_list.patient_id
    %tr.center
      %th= HospitalStayList.human_attribute_name(:receipt_date)
      %td= @hospital_stay_list.receipt_date
    %tr.center
      %th= HospitalStayList.human_attribute_name(:reason)
      %td= @hospital_stay_list.reason
    %tr.center
      %th= HospitalStayList.human_attribute_name(:discharge_date)
      %td= @hospital_stay_list.discharge_date
    %tr.center
      %th= HospitalStayList.human_attribute_name(:ward_id)
      %td= @hospital_stay_list.ward_id
-if @current_role_user.present?
  = link_to edit_hospital_stay_list_path(@hospital_stay_list), class: 'btn btn-info' do
    = fa_icon :edit
    = t('buttons.edit')
  = link_to @hospital_stay_list, :method => :delete, :data => { :confirm => t('buttons.confirm.hospital_stay_list') }, class: 'btn btn-danger' do
    = fa_icon :times
    = t('buttons.destroy')
